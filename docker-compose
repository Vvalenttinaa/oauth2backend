version: "3.8"
services:
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: keycloak
      MYSQL_USER: root
      MYSQL_PASSWORD: root
      # Opcionalno: postavi karakter set i collation za Unicode / utf8mb4 podr≈°ku
      # MYSQL_CHARSET: utf8mb4
      # MYSQL_COLLATION: utf8mb4_general_ci
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - web

  keycloak:
    image: quay.io/keycloak/keycloak:latest
    command: ["start", "--optimized"]
    environment:
      KC_DB: mysql
      KC_DB_URL_HOST: mysql
      KC_DB_URL_DATABASE: keycloak
      KC_DB_USERNAME: root
      KC_DB_PASSWORD: root
      KC_HOSTNAME: auth.example.com
      KC_HOSTNAME_STRICT: "false"
      KC_HTTP_RELATIVE_PATH: /
      KC_HEALTH_ENABLED: "true"
      KC_METRICS_ENABLED: "true"
      KC_ADMIN: "admin"
      KC_ADMIN_PASSWORD: "admin-password"
    depends_on:
      - mysql
    volumes:
      - keycloak_data:/opt/keycloak/data
    networks:
      - web

  backend:
    build: ./oauth2backend
    image: myorg/oauth2backend:local
    environment:
      SPRING_PROFILES_ACTIVE: dev
    ports:
      - "8080:8080"
    networks:
      - web

  caddy:
    image: caddy:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - caddy_data:/data
      - caddy_config:/config
    networks:
      - web

volumes:
  mysql_data:
  keycloak_data:
  caddy_data:
  caddy_config:

networks:
  web:
    driver: bridge
