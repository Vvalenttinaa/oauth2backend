version: "3.8"

services:
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: keycloak
      MYSQL_USER: root
      MYSQL_PASSWORD: root
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - web
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  keycloak:
    image: quay.io/keycloak/keycloak:latest
    command: ["start", "--optimized"]
    environment:
      KC_DB: mysql
      KC_DB_URL_HOST: mysql
      KC_DB_URL_DATABASE: keycloak
      KC_DB_USERNAME: root
      KC_DB_PASSWORD: root
      KC_HOSTNAME: auth.example.com
      KC_HOSTNAME_STRICT: "false"
      KC_HTTP_RELATIVE_PATH: /
      KC_HEALTH_ENABLED: "true"
      KC_METRICS_ENABLED: "true"
      KC_ADMIN: "admin"
      KC_ADMIN_PASSWORD: "admin-password"
    depends_on:
      mysql:
        condition: service_healthy
    volumes:
      - keycloak_data:/opt/keycloak/data
    networks:
      - web
    ports:
      - "8081:8080" # ako želiš da testiraš Keycloak lokalno

  backend:
    build: ./oauth2backend
    image: myorg/oauth2backend:local
    environment:
      SPRING_PROFILES_ACTIVE: dev
    depends_on:
      - keycloak
    networks:
      - web
    expose:
      - "8080"

  caddy:
    image: caddy:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - caddy_data:/data
      - caddy_config:/config
    depends_on:
      - backend
      - keycloak
    networks:
      - web

volumes:
  mysql_data:
  keycloak_data:
  caddy_data:
  caddy_config:

networks:
  web:
    driver: bridge
